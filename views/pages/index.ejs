<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Cookbook</title>
    <style>
        body {
            background-image: url("unsplashbackground.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            font-family: Arial, Helvetica, sans-serif;
        }

        .cards {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-gap: 1rem;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            margin-top: 20px;
        }

        .card {
            /* Add shadows to create the "card" effect */
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            background-color: white;
        }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

        /* Add some padding inside the card container */
        .container {
            padding: 2px 16px;
        }

        .description {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 12px;
        }

        a {
            color: inherit;
            text-decoration: non;
        }
    </style>
    <script src="MicrosoftTeams.min.js"></script>
</head>

<body>
    <form method="POST" action="/recipe">
        <input type="text" name="recipeurl" placeholder="Nutritious Recipe URL" aria-label="Nutritious Recipe URL"
            required>
        <input type="submit">
    </form>

    <!--Grid of recipes goes here...-->
    <div class="cards">
        <% recipes.forEach(function(recipe){ %>
        <a href="<%=recipe.url%>">
            <div class="card">
                <img src="/images/<%=recipe.coverImage%>" alt="Recipe Cover Image" style="width:100%">
                <div class="container">
                    <h4><b><%=recipe.title%></b></h4>
                    <p><%=recipe.siteName%></p>
                    <p class="description"><%=recipe.description%></p>
                </div>
            </div>
        </a>
        <% }) %>
    </div>

    <script>
        microsoftTeams.initialize();
        microsoftTeams.appInitialization.notifyAppLoaded();
        // Check the initial theme user chose and respect it
        microsoftTeams.getContext(function (context) {
            console.log(context);
        });
        microsoftTeams.appInitialization.notifySuccess();
    </script>
</body>

</html>